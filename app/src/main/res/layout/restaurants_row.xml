<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/res_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/restaurant" />

            <View
                android:layout_marginLeft="2dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">
            </View>

            <LinearLayout
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/res_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Restaurant Name"
                    android:gravity="center"
                    android:textColor="#040404"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/res_type"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_below="@+id/res_title"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Chinese Food, Burger, Thai, Indian"
                    android:textColor="#1d1d1d"
                    android:textSize="15dip" />

                <TextView
                    android:clickable="true"
                    android:id="@+id/res_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_below="@+id/res_type"
                    android:gravity="center"
                    android:text="01xxxxxxxxx"
                    android:textColor="#10bcc9"
                    android:textSize="12dip"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>