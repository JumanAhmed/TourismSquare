<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#ffffff">


        <LinearLayout
            android:id="@+id/desc"
            android:background="#81D4FA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Shop Name"
                android:textColor="#040404"
                android:textSize="25dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/shop_address"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@+id/hotel_title"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Zindabazar, Sylhet"
                android:textColor="#1d1d1d"
                android:textSize="20dip" />


            <TextView
                android:id="@+id/shop_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@+id/res_title"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Shopping Centre"
                android:textColor="#1d1d1d"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/shop_contact"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@+id/res_type"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="01xxxxxxxxx"
                android:textColor="#BA68C8"
                android:textSize="15dip"
                android:textStyle="bold" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>